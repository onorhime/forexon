                                        "AUD",
                                        "CAD",
                                        "NZD",
                                        "CNY",
                                        "TRY",
                                        "SEK",
                                        "NOK"
                                    ],
                                    "isTransparent": true,
                                    "colorTheme": "light",
                                    "locale": "en"
                                }
                            </script>
                        </div>
                        <!-- TradingView Widget END -->
                    </div>
                </div>
            </div>
        </div>
        

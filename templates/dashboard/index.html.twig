                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for tx in txs %}
                                        <tr>
                                            <td>
                                                {{ tx.date | date('D, M d, Y g:i A') }}
                                            </td>
                                            <td>
                                                {{tx.description}}
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    ${{tx.amount|number_format(2, '.', '')}} 
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                 </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
